<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="DevDaysSpeakers.View.DetailsPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Details">


    <ScrollView Padding="10">
        <StackLayout Spacing="10">
            <Image WidthRequest="200"
                   HeightRequest="200"
                   Source="{Binding Avatar}" />
            <Label FontSize="24" Text="{Binding Name}" />
            <Label Text="{Binding Title}" TextColor="Purple" />
            <Label Text="{Binding Description}" />

            <Button x:Name="ButtonSpeak" Text="Speak" />
            <Button x:Name="ButtonWebsite" Text="Go to Website" />
            <Button x:Name="ButtonSpecial" Text="Analyze" />

        </StackLayout>
    </ScrollView>

</ContentPage>