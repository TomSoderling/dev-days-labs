<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="DevDaysSpeakers.View.SpeakersPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Speakers">

    <StackLayout Spacing="0">
        <Button Command="{Binding GetSpeakersCommand}" Text="Sync Speakers" />
        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />

        <ListView x:Name="ListViewSpeakers" ItemsSource="{Binding Speakers}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell Detail="{Binding Title}"
                               ImageSource="{Binding Avatar}"
                               Text="{Binding Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </StackLayout>

</ContentPage>